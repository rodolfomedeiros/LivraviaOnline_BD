<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminControlServlet</servlet-name>
        <servlet-class>livraria.servlet.AdminControlServlet</servlet-class>
        <multipart-config>
            <location>C:/Users/rodol/Documents/NetBeansProjects/bookamazing/web/imagensLivro</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminControlServlet</servlet-name>
        <url-pattern>/view/adminAdicionarLivro</url-pattern>
        <url-pattern>/view/adminAtualizarLivro</url-pattern>
        <url-pattern>/view/adminRemoverLivro</url-pattern>
        <url-pattern>/view/adminIndex</url-pattern>
        <url-pattern>/view/adminInserirAutor</url-pattern> 
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginControlServlet</servlet-name>
        <servlet-class>livraria.servlet.LoginControlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControlServlet</servlet-name>
        <url-pattern>/view/login</url-pattern>
        <url-pattern>/view/createCliente</url-pattern>
        <url-pattern>/view/logout</url-pattern>
        <url-pattern>/view/updateCliente</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClienteControlServlet</servlet-name>
        <servlet-class>livraria.servlet.ClienteControlServlet</servlet-class>
        <init-param>
            <param-name>head</param-name>
            <param-value>C:/Users/rodol/Documents/NetBeansProjects/bookamazing/web/emailHtml/head.html</param-value>
        </init-param>
        <init-param>
            <param-name>footer</param-name>
            <param-value>C:/Users/rodol/Documents/NetBeansProjects/bookamazing/web/emailHtml/footer.html</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteControlServlet</servlet-name>
        <url-pattern>/view/clienteIndex</url-pattern>
        <url-pattern>/view/clienteMeusDados</url-pattern>
        <url-pattern>/view/clienteCarrinho</url-pattern>
        <url-pattern>/view/clienteMeusPedidos</url-pattern>
        <url-pattern>/view/clienteFinalizarCompra</url-pattern>
        <url-pattern>/view/clienteRecibo</url-pattern>
        <url-pattern>/view/clienteContaExcluida</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <jsp-property-group>
            <display-name>livraria</display-name>
            <url-pattern>/view/*</url-pattern>
            <include-prelude>/modelos/cabecalho.jspf</include-prelude>
            <include-coda>/modelos/rodape.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
